@model CarteiraDigital.ViewModel.LoginModel

@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="d-flex justify-content-center align-items-center text-center" style="height: calc(100vh - 210px); flex-direction: column;">
        <div>
            <h1 class="mb-4">Login</h1>
            <form asp-controller="Login" asp-action="Entrar" method="post">
                <div class="form-group" style="width: 500px;">
                    <div class="d-flex justify-content-start align-items-start text-center mb-4" style="flex-direction: column;">
                        <label class="control-label">Email</label>
                        <input style="width: 100%;" type="email" asp-for="Email" class="form-control" placeholder="Digite seu email" name="Email" required>
                    </div>
                    <div class="d-flex justify-content-start align-items-start text-center" style="flex-direction: column;">
                        <label class="control-label">Senha</label>
                        <input style="width: 100%;" type="password" asp-for="Senha" class="form-control" placeholder="Digite sua senha" name="Senha" required>
                    </div>
                </div>
                <div class="form-group">
                    <button style="width: 100%;" type="submit" value="Logar" class="btn btn-light mb-2 mt-4">Entrar</button>
                    <a asp-controller="Pessoa" asp-action="Cadastrar" style="width: 100%;" class="btn btn-dark mt-2 mb-4">Cadastrar</a> 
                </div>
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        @ViewBag.MensagemErro
                    </div>
                } 
            </form>
        </div>
    </div>
</div>
