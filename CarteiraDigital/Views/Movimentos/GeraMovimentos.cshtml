@model CarteiraDigital.ViewModel.MovimentoViewModel

@{
    ViewData["Title"] = "GeraMovimentos";
}

<h1>GeraMovimentos</h1>

<h4>MovimentoViewModel</h4>
<hr />
<div class="row">
    <div class="col-md">
        <form asp-action="GeraMovimentos">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PessoaId" class="form-control" />
            <div class="form-group">
                <label asp-for="Descricao" class="control-label">Descrição</label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label">Valor</label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group form-check p-0">
                <div class="form-check form-check-inline">
                    <input asp-for="TipoMovimento" class="form-check-input" value="true" type="radio" >
                    <label asp-for="TipoMovimento" class="form-check-label" for="inlineRadio1">Entrada</label>
                </div>
                <div class="form-check form-check-inline">
                    <input asp-for="TipoMovimento" class="form-check-input" value="false" type="radio">
                    <label asp-for="TipoMovimento" class="form-check-label" for="inlineRadio2">Saída </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar Movimento" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Pessoa" asp-action="Index" class="btn btn-light">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 